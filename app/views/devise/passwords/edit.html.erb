<% content_for :title, t('forgot_password') %>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.hidden_field :reset_password_token %>
  <!--<%= devise_error_messages! %>-->

  <div class="field">
    <%= f.input :password, autofocus: true, autocomplete: "off", label: t('new_password') %>
  </div>

  <div class="field">
    <%= f.input :password_confirmation, autocomplete: "off", label: t('confirm_password') %>
  </div>

  <div class="actions">
    <%= button_tag t('change_password'), class: "button expand" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
