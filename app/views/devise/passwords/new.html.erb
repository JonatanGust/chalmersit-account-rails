<% content_for :title, t('forgot_password') %>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.email_field :email, autofocus: true, placeholder: t('mail') %>

  <%= f.submit t('send_instructions'), class: 'small-12 columns button' %>
<% end %>

<%= render "devise/shared/links" %>
