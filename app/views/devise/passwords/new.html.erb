<% content_for :title, t('forgot_password') %>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.email_field :email, autofocus: true, placeholder: t('mail', count: 1) %>

  <%= button_tag class: 'expand columns button' do -%>
      <%= fa_icon 'eject' -%>
      <%= t('send_instructions') -%>
  <% end -%>
<% end %>

<%= render "devise/shared/links" %>
