<% content_for :title, t('forgot_password') %>
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>
  <%= f.input :cid, autofocus: true, placeholder: 'CID', label: false %>

  <%= button_tag class: 'expand columns button' do -%>
      <%= fa_icon 'eject' -%>
      <%= t('send_instructions') -%>
  <% end -%>
<% end %>

<%= render "devise/shared/links" %>
