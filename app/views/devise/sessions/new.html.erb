<div class="row">
  <div class="small-5 small-centered columns login-box">
    <h2 class="centered">Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="row">
        <div class="small-9 small-centered columns">
          <%= f.text_field :cid, autofocus: true, placeholder: 'CID' %>
          <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>

          <% if devise_mapping.rememberable? -%>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          <% end -%>
        </div>
      </div>
      <div class="row">
        <div class="small-centered small-9 columns">
          <%= f.submit "Log in", class: 'small-12 columns button' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%#= render "devise/shared/links" %>
